services:
  sonarr:
    image: linuxserver/sonarr:latest
    networks:
     -  media_net
    container_name: sonarr
    environment:
      - PUID={{ ansible_user_uid }}
      - PGID={{ ansible_user_gid }}
      - TZ=America/Chicago
    volumes:
      - {{ media_base_path }}/config/sonarr:/config
      - {{ media_base_path }}/data/tv:/tv
      - {{ media_base_path }}/data/downloads:/downloads
    ports:
      - 8989:8989
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.sonarr.rule=Host(`sonarr.local`)"
      - "traefik.http.routers.sonarr.entrypoints=web"
      - "traefik.http.services.sonarr.loadbalancer.server.port=8989"

  radarr:
    image: linuxserver/radarr:latest
    networks:
      - media_net
    container_name: radarr
    environment:
      - PUID={{ ansible_user_uid }}
      - PGID={{ ansible_user_gid }}
      - TZ=America/Chicago
    volumes:
      - {{ media_base_path }}/config/radarr:/config
      - {{ media_base_path }}/data/movies:/movies
      - {{ media_base_path }}/data/downloads:/downloads
    ports:
      - 7878:7878
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.radarr.rule=Host(`radarr.local`)"
      - "traefik.http.routers.radarr.entrypoints=web"
      - "traefik.http.services.radarr.loadbalancer.server.port=7878"

  sabnzbd:
    image: linuxserver/sabnzbd:latest
    networks:
     - media_net
    container_name: sabnzbd
    environment:
      - PUID={{ ansible_user_uid }}
      - PGID={{ ansible_user_gid }}
      - TZ=America/Chicago
    volumes:
      - {{ media_base_path }}/config/sabnzbd:/config
      - {{ media_base_path }}/data/downloads:/downloads
    ports:
      - 8085:8080
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.sabnzbd.rule=Host(`sabnzbd.local`)"
      - "traefik.http.routers.sabnzbd.entrypoints=web"
      - "traefik.http.services.sabnzbd.loadbalancer.server.port=8080"

networks:
  media_net:
    external: true
    name: media_net
